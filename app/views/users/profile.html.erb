<div class="container-field user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li>
          <%= link_to "アカウント", "/users/account" %>
        </li>
        <li class="active">
          <%= link_to "プロフィール", "/users/profile" %>
        </li>
      </ul>
    </div>
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li>
          <%= link_to "アカウント", "/users/account" %>
        </li>
        <li class="active">
          <%= link_to "プロフィール", "/users/profile" %>
        </li>
      </ul>
    </div>
    <div class="col-lg-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>
        <%= form_with url: "/users//update", class: "edit_user" do |form| %>
          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <%= image_tag "/room_images/default_icon.jpg", class: "icon-image host-icon" %>
                </div>
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= form.label :icon_image, "アイコン画像", class: "col-md-3 required-a" %>
              <%= form.file_field :icon_image, class: "mb-4 col-md-9" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= form.label :name, "名前", class: "col-md-3 required-a" %>
              <%= form.text_field :name, class: "form-control mb-4 col-md-9", placeholder: "名前を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= form.label :introduction, "自己紹介", class: "col-md-3 required-a" %>
              <%= form.text_area :introduction, class: "form-control mb-4 col-md-9", placeholder: "自己紹介を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= form.submit "更新", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>