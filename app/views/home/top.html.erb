<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
            <%= form_for :rooms_search, method: :get do |form| %>
              <%= form.label "エリア" %>
              <%= form.text_field :area, value: "", class: "form-control mb-4", placeholder: "東京" %>
              <%= form.submit "探す", class: "form-control btn-primary mb-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめエリア</h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
          <%=link_to image_tag("/assets/img_tokyo.jpg", class: "panel-image shadow")%>
          <span>東京</span>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <%=link_to image_tag("/assets/img_osaka.jpg", class: "panel-image shadow")%>
          <span>大阪</span>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <%=link_to image_tag("/assets/img_kyoto.jpg", class: "panel-image shadow")%>
          <span>京都</span>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <%=link_to image_tag("/assets/img_sapporo.jpg", class: "panel-image shadow")%>
          <span>札幌</span>
        </div>
      </div>
    </div>
  </div>
</div>
