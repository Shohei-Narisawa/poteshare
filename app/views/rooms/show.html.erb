<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag "/room_images/default_room.jpg", class: "room-show-image" %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <%= image_tag "/room_images/default_icon.jpg", class: "host-icon" %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.introduction %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <%= form_with url:"reservations_new" do |form| %>
            <%= form.label :start_date, "開始日" %>
            <%= form.date_field :start_date, class: "form-control mb-4" %>
            <%= form.label :end_date, "終了日" %>
            <%= form.date_field :end_date, class: "form-control mb-4" %>
            <%= form.label :person_num, "人数" %>
            <%= form.number_field :person_num, class: "form-control mb-4", min: 0 %>
            <%= form.submit "予約する", class: "btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>